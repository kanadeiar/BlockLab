@model BlockLab.Controllers.AccountController.LoginWebModel
@{
    ViewBag.Title = "Вход";
}

<div class="border-1 bg-light shadow rounded-1 p-2">
    <h1>@ViewBag.Title</h1>

    <div class="row">
        <div class="col-lg-6">
            <form asp-controller="Account" asp-action="Login" asp-antiforgery="true" asp-route-returnUrl="@Model?.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger alert-danger p-2 my-2"></div>

                <div class="my-1">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Введите ваш логин пользователя" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="my-1">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Введите ваш пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check my-1">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>

                <button type="submit" class="btn btn-primary my-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Подтверждение входа пользователя в систему">
                    Вход
                </button>
            </form>
        </div>
        <div class="col-lg-6">
            <h3>Данные тестовых учетных записей для демонстрации приложения</h3>

            <div>
                <h6>Администратор</h6>
                <p>Логин: <strong>admin</strong></p>
                <p>Пароль: <strong>secret</strong></p>
            </div>

            <div>
                <h6>Простой пользователь</h6>
                <p>Логин: <strong>lab</strong></p>
                <p>Пароль: <strong>123</strong></p>
            </div>

            <div>
                <p class="alert-warning p-2">Если под простым пользователем не удается залогиниться - значит его кто-то удалил из базы данных.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="Partial/_ValidationScriptsPartial"/>
}