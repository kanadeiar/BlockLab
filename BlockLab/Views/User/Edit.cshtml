@model BlockLab.Controllers.UserController.UserEditWebModel;
@{
    ViewBag.Title = (Model?.Id is null) ? "Создание нового пользователя" : "Редактирование пользователя";
}

<div class="row">
    <div class="col-md-4 col-lg-3 mb-1">
        <partial name="Partial/_AccountLeftSidebarPartial" />
    </div>
    <div class="col-md-8 col-lg-9 mb-1">
        <div class="border-1 shadow rounded bg-light p-2">
            <h1>@ViewBag.Title</h1>

            <div class="col-lg-6">
                <form asp-controller="User" asp-action="Edit" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="my-2">
                        <label asp-for="SurName" class="form-label"></label>
                        <input asp-for="SurName" class="form-control" placeholder="Введите фамилию" />
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    </div>

                    <div class="my-2">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Введите имя" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="my-2">
                        <label asp-for="Patronymic" class="form-label"></label>
                        <input asp-for="Patronymic" class="form-control" placeholder="Введите отчество" />
                        <span asp-validation-for="Patronymic" class="text-danger"></span>
                    </div>

                    <div class="my-2">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Введите электронную почту пользователя" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="my-2">
                        <label asp-for="Birthday" class="form-label"></label>
                        <input asp-for="Birthday" type="date" class="form-control" placeholder="Введите день рождения пользователя" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>

                    <div class="my-2">
                        <label asp-for="UserRoles" class="form-label"></label>
                        <div class="form-group">
                            @foreach (var role in Model.AllRoles)
                            {
                                <input type="checkbox" name="roles" value="@role.Name"
                                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
                                @role.Description <br/>
                            }
                        </div>
                    </div>

                    <div class="my-2">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Введите логин пользователя" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="my-2">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Введите новый пароль, если требуется смена пароля" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="my-2">
                        <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Сохранить изменения в данных пользователя">
                            Сохранить
                        </button>
                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Назад</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
<partial name="Partial/_ValidationScriptsPartial" />
}